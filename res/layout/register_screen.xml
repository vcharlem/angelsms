<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/Black"
    android:gravity="center"
    tools:context=".MainActivity" >
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FF7700" >

        <LinearLayout
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:text="Register"
                android:textColor="@color/White"
                android:textSize="@dimen/font_medium" />
        </LinearLayout>

	    <LinearLayout
	        android:id="@+id/ll1"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignParentTop="true"
	        android:layout_below="@id/top" >
	
	        <Button
	            android:id="@+id/button_skip"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="8dp"
	            android:background="#FF7700"
	            android:onClick="OnClickAbout"
	            android:text="Skip"
	            android:textColor="@color/Black"
	            android:textSize="@dimen/font_medium" />
	
	        <Button
	            android:id="@+id/button_done"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentRight="true"
	            android:layout_gravity="right"
	            android:layout_marginLeft="200dp"
	            android:layout_marginRight="5dp"
	            android:background="#FF7700"
	            android:gravity="center_vertical|center_horizontal|right"
	            android:onClick="OnClickQuit"
	            android:text="Done"
	            android:textColor="@color/Black"
	            android:textSize="@dimen/font_medium" />
	    </LinearLayout>

	   <LinearLayout
	       android:id="@+id/ll3"
	       android:layout_width="match_parent"
	       android:layout_height="wrap_content"
	       android:layout_below="@id/ll1"
	       android:gravity="center|center_horizontal" >
	
	       <EditText
	           android:id="@+id/instructions"
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:layout_weight="1"
	           android:clickable="false"
	           android:cursorVisible="false"
	           android:editable="false"
	           android:ems="10"
	           android:focusable="false"
	           android:focusableInTouchMode="false"
	           android:inputType="none"
	           android:text="Please confirm your Country code and enter your mobile number." />
	   </LinearLayout>

	    <LinearLayout
	        android:id="@+id/ll5"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/ll3"
	        android:gravity="center|center_horizontal" >
	
	        <EditText
	            android:id="@+id/phoneNum"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:clickable="true"
	            android:cursorVisible="true"
	            android:editable="true"
	            android:ems="10"
	            android:focusable="true"
	            android:focusableInTouchMode="false"
	            android:hint="@string/input_hint"
	            android:inputType="none"
	            android:textColor="@color/Black" />
	    </LinearLayout>

    <include
        android:id="@+id/keypadview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll5"
        android:background="#FF7700" 
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        layout="@layout/keypad"
        android:gravity="center" >
    </include>

    <include
        android:id="@+id/bottom_btns"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/keypadview"
        android:layout_alignParentBottom="true"
        android:background="#FF7700" 
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        layout="@layout/about_quit_btn"
        android:gravity="center" >
    </include>
  </RelativeLayout>
</LinearLayout>